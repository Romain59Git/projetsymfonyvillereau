{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe - CDJ Villereau{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-card">
        <h1>Nouveau mot de passe</h1>

        {% for message in app.flashes('error') %}
            <div class="alert-error">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <p class="util-text-muted util-text-center util-mb-4">
            Veuillez choisir votre nouveau mot de passe.
        </p>

        <form method="post" class="login-form">
            <div class="form-group">
                <label for="password">
                    <i class="fas fa-lock"></i>
                    Nouveau mot de passe
                </label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    autofocus
                    placeholder="Votre nouveau mot de passe"
                    minlength="6"
                >
                <small class="util-form-text util-text-muted">
                    Le mot de passe doit contenir au moins 6 caractères.
                </small>
            </div>

            <button type="submit" class="login-button">
                <i class="fas fa-check"></i>
                Réinitialiser le mot de passe
            </button>
        </form>
    </div>
</div>

{% endblock %} 