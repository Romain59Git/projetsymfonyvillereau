{% extends 'base.html.twig' %}

{% block title %}Actualités du Ping{% endblock %}

{% block body %}
<style>
    .articles-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .article-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        overflow: hidden;
        transition: transform 0.3s ease;
        display: flex;
    }

    .article-card:hover {
        transform: translateY(-5px);
    }

    .article-image-container {
        flex: 0 0 400px;
        position: relative;
        overflow: hidden;
    }

    .article-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .article-content {
        flex: 1;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
    }

    .article-title {
        color: var(--primary-color);
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .article-meta {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .article-text {
        color: #333;
        line-height: 1.6;
        flex-grow: 1;
    }

    .no-articles {
        text-align: center;
        padding: 3rem;
        color: #666;
        font-style: italic;
    }

    @media (max-width: 992px) {
        .article-card {
            flex-direction: column;
        }

        .article-image-container {
            flex: 0 0 300px;
            width: 100%;
        }

        .article-content {
            padding: 1.5rem;
        }

        .article-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="articles-container">
    <h1>Actualités du club</h1>

    {% if articles is empty %}
        <div class="no-articles">
            <p>Aucun article n'a été publié pour le moment.</p>
        </div>
    {% else %}
        {% for article in articles %}
            <article class="article-card">
                {% if article.image %}
                    <div class="article-image-container">
                        <img src="{{ asset('image/' ~ article.image) }}" alt="{{ article.title }}" class="article-image">
                    </div>
                {% endif %}
                <div class="article-content">
                    <h2 class="article-title">{{ article.title }}</h2>
                    <div class="article-meta">
                        Publié le {{ article.createdAt|format_datetime('full', 'short', locale='fr') }}
                    </div>
                    <div class="article-text">
                        {{ article.content|raw }}
                    </div>
                </div>
            </article>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
