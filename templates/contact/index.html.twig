{% extends 'base.html.twig' %}

{% block title %}Contact - CDJ Villereau{% endblock %}

{% block body %}
<div class="contact-wrapper">
    <h1>Nous contacter</h1>
    
    <!-- Section d'informations de contact -->
    <div class="contact-info-section">
        <div class="contact-info-row">
            <div class="contact-info-card">
                <div class="contact-method">
                    <div class="contact-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="contact-details">
                        <h3>Email</h3>
                        <p>Écrivez-nous à l'adresse</p>
                        <a href="mailto:contact@villereau-tt.fr">contact@villereau-tt.fr</a>
                    </div>
                </div>
            </div>
            
            <div class="contact-info-card">
                <div class="contact-method">
                    <div class="contact-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="contact-details">
                        <h3>Téléphone</h3>
                        <p>Appelez-nous au</p>
                        <a href="tel:0600000000">06 00 00 00 00</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="contact-info-centered">
            <div class="contact-info-card">
                <div class="contact-method">
                    <div class="contact-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="contact-details">
                        <h3>Disponibilité</h3>
                        <p>Nous sommes à votre écoute pour toute question ou demande de renseignements</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Messages flash -->
    {% for message in app.flashes('success') %}
        <div class="contact-success-message">
            <i class="fas fa-check-circle"></i>
            {{ message }}
        </div>
    {% endfor %}

    <!-- Formulaire de contact -->
    <div class="contact-form-section">
        <h2>Envoyez-nous un message</h2>
        <p>Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.</p>
        
        <form method="post" class="contact-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="name">
                        <i class="fas fa-user"></i>
                        Nom complet *
                    </label>
                    <input type="text" id="name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i>
                        Email *
                    </label>
                    <input type="email" id="email" name="email" required>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="phone">
                        <i class="fas fa-phone"></i>
                        Téléphone
                    </label>
                    <input type="tel" id="phone" name="phone">
                </div>
                
                <div class="form-group">
                    <label for="subject">
                        <i class="fas fa-tag"></i>
                        Sujet *
                    </label>
                    <select id="subject" name="subject" required>
                        <option value="">Choisissez un sujet</option>
                        <option value="Adhésion">Adhésion au club</option>
                        <option value="Entraînements">Informations sur les entraînements</option>
                        <option value="Compétitions">Compétitions et rencontres</option>
                        <option value="Événements">Événements du club</option>
                        <option value="Partenariat">Proposition de partenariat</option>
                        <option value="Autre">Autre demande</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group full-width">
                <label for="message">
                    <i class="fas fa-comment-dots"></i>
                    Votre message *
                </label>
                <textarea id="message" name="message" rows="6" required placeholder="Décrivez votre demande en détail..."></textarea>
            </div>
            
            <div class="form-submit">
                <button type="submit" class="contact-submit-btn">
                    <i class="fas fa-paper-plane"></i>
                    Envoyer le message
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
