<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Administration{% endblock %} - CDJ Villereau</title>
        <link rel="icon" href="favicon.ico">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
            <style>
                .admin-sidebar {
                    min-height: 100vh;
                    background-color: #2c3e50;
                    color: white;
                    padding-top: 2rem;
                }
                
                .admin-sidebar .nav-link {
                    color: rgba(255,255,255,.8);
                    padding: 0.8rem 1rem;
                    margin: 0.2rem 0;
                    border-radius: 0.25rem;
                }
                
                .admin-sidebar .nav-link:hover {
                    color: white;
                    background-color: rgba(255,255,255,.1);
                }
                
                .admin-sidebar .nav-link.active {
                    background-color: #e74c3c;
                    color: white;
                }
                
                .admin-sidebar .nav-link i {
                    width: 25px;
                }
                
                .admin-content {
                    padding: 2rem;
                    background-color: #f8f9fa;
                    min-height: 100vh;
                }
                
                .admin-header {
                    background-color: white;
                    padding: 1rem 2rem;
                    box-shadow: 0 2px 4px rgba(0,0,0,.1);
                    margin-bottom: 2rem;
                }
                
                .stats-card {
                    background: white;
                    border-radius: 8px;
                    padding: 1.5rem;
                    box-shadow: 0 2px 4px rgba(0,0,0,.05);
                    margin-bottom: 1rem;
                }
                
                .stats-card h3 {
                    color: #2c3e50;
                    font-size: 1.1rem;
                    margin-bottom: 1rem;
                }
                
                .stats-card .number {
                    font-size: 2rem;
                    font-weight: bold;
                    color: #e74c3c;
                }
            </style>
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-3 col-lg-2 admin-sidebar">
                    <div class="text-center mb-4">
                        <img src="{{ asset('image/logopingcdj.png') }}" alt="Logo" style="max-width: 120px;">
                        <h4 class="mt-3">Administration</h4>
                    </div>
                    <nav class="nav flex-column">
                        <a class="nav-link {% if app.request.get('_route') == 'app_admin' %}active{% endif %}" href="{{ path('app_admin') }}">
                            <i class="fas fa-home"></i> Tableau de bord
                        </a>
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_articles' %}active{% endif %}" href="{{ path('admin_articles') }}">
                            <i class="fas fa-newspaper"></i> Articles
                        </a>
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_licencies' %}active{% endif %}" href="{{ path('admin_licencies') }}">
                            <i class="fas fa-users"></i> Licenciés
                        </a>
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_rencontre' %}active{% endif %}" href="{{ path('admin_rencontre_index') }}">
                            <i class="fas fa-users"></i> Rencontres
                        </a>
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_avis' %}active{% endif %}" href="{{ path('admin_avis') }}">
                            <i class="fas fa-comments"></i> Avis
                        </a>
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_parametres' %}active{% endif %}" href="{{ path('admin_parametres') }}">
                            <i class="fas fa-cog"></i> Paramètres
                        </a>
                        <div class="dropdown-divider bg-light opacity-25 my-3"></div>
                        <a class="nav-link" href="{{ path('app_accueil') }}" target="_blank">
                            <i class="fas fa-external-link-alt"></i> Voir le site
                        </a>
                        <a class="nav-link text-danger" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt"></i> Déconnexion
                        </a>
                    </nav>
                </div>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10 admin-content">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        {% endblock %}
    </body>
</html> 