{% extends 'admin/base_admin.html.twig' %}

{% block title %}Gestion des licenciés{% endblock %}

{% block body %}
    <div class="admin-header d-flex justify-content-between align-items-center">
        <h1 class="mb-0">Gestion des licenciés</h1>
        <a href="{{ path('admin_licencie_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau licencié
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Liste des licenciés ({{ licencies|length }})</h5>
        </div>
        <div class="card-body">
            {% if licencies|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Prénom</th>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Date de naissance</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for licencie in licencies %}
                                <tr>
                                    <td>{{ licencie.id }}</td>
                                    <td>{{ licencie.firstName }}</td>
                                    <td>{{ licencie.lastName }}</td>
                                    <td>{{ licencie.email }}</td>
                                    <td>
                                        {% if licencie.birthDate %}
                                            {{ licencie.birthDate|date('d/m/Y') }}
                                        {% else %}
                                            <em class="text-muted">Non renseignée</em>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-flex admin-btn-group">
                                            <a href="{{ path('admin_licencie_edit', {'id': licencie.id}) }}" 
                                               class="btn btn-warning admin-btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('admin_licencie_delete', {'id': licencie.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce licencié ?')" 
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ licencie.id) }}">
                                                <button type="submit" class="btn btn-danger admin-btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Aucun licencié enregistré.</p>
                    <a href="{{ path('admin_licencie_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Ajouter le premier licencié
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %} 