{% extends 'admin/base_admin.html.twig' %}

{% block title %}Gestion des contacts{% endblock %}

{% block body %}
<div class="admin-content">
    <div class="admin-header">
        <h1><i class="fas fa-envelope"></i> Messages de contact</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
    </div>

    {% if contacts|length > 0 %}
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-inbox"></i> 
                    Messages reçus ({{ contacts|length }})
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Statut</th>
                                <th>Date</th>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Sujet</th>
                                <th>Message</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contact in contacts %}
                                <tr class="{{ contact.isRead ? '' : 'table-warning' }}">
                                    <td>
                                        {% if contact.isRead %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Lu
                                            </span>
                                        {% else %}
                                            <span class="badge bg-warning">
                                                <i class="fas fa-envelope"></i> Non lu
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ contact.createdAt|date('d/m/Y') }}<br>
                                            {{ contact.createdAt|date('H:i') }}
                                        </small>
                                    </td>
                                    <td>
                                        <strong>{{ contact.name }}</strong>
                                        {% if contact.phone %}
                                            <br><small class="text-muted">
                                                <i class="fas fa-phone"></i> {{ contact.phone }}
                                            </small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="mailto:{{ contact.email }}" class="text-decoration-none">
                                            <i class="fas fa-envelope"></i> {{ contact.email }}
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ contact.subject }}</span>
                                    </td>
                                    <td>
                                        <div style="max-width: 300px;">
                                            {% if contact.message|length > 100 %}
                                                {{ contact.message|slice(0, 100) }}...
                                            {% else %}
                                                {{ contact.message }}
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('admin_contact_read', {'id': contact.id}) }}" 
                                               class="btn btn-outline-primary" 
                                               title="Voir le détail">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="mailto:{{ contact.email }}?subject=Re: {{ contact.subject }}" 
                                               class="btn btn-outline-success" 
                                               title="Répondre par email">
                                                <i class="fas fa-reply"></i>
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('admin_contact_delete', {'id': contact.id}) }}" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce message ?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Aucun message de contact</h5>
                <p class="text-muted">Les messages de contact apparaîtront ici lorsque les visiteurs utiliseront le formulaire.</p>
            </div>
        </div>
    {% endif %}
</div>

<style>
.table-warning {
    --bs-table-accent-bg: rgba(255, 193, 7, 0.1);
}

.badge {
    font-size: 0.75rem;
}

.btn-group-sm .btn {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.admin-header {
    margin-bottom: 2rem;
}

.admin-header h1 {
    color: #2c3e50;
    margin-bottom: 1rem;
}

.alert {
    border: none;
    border-radius: 8px;
}

.table th {
    border-top: none;
    font-weight: 600;
    color: #495057;
    font-size: 0.875rem;
}

.table td {
    vertical-align: middle;
}
</style>
{% endblock %} 