                <div class="menu-overlay" 
                     data-burger-menu-target="overlay"
                     data-action="click->burger-menu#closeOnOverlay">
                <nav class="menu-drawer">
                    <button class="close-menu" 
                            data-burger-menu-target="closeButton"
                            data-action="click->burger-menu#close"
                            aria-label="Fermer le menu">
                        <i class="fas fa-times"></i>
                    </button>
                    <ul>
                        <li><a href="{{ path('app_accueil') }}">Accueil</a></li>
                        <li><a href="{{ path('app_entrainement') }}">Entraînements</a></li>
                        <li><a href="{{ path('app_adhesion') }}">Adhésion</a></li>
                        <li><a href="{{ path('app_actualite') }}">Actualités</a></li>
